{
  "rules": {
    "quotemark": [true, "single"],
    "semicolon": true,
    "eofline": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "no-trailing-whitespace": true
  }
}